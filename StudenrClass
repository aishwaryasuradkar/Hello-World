import java.util.Scanner;
class Information {
    int cyear;
    String fname, lname, major;

    void personal() {
        Scanner sc = new Scanner(System.in);
        System.out.println("Enter first name of the student");
        fname = sc.next();
        Scanner s = new Scanner(System.in);
        System.out.println("Enter last name of the student");
        lname = s.next();
        Scanner c = new Scanner(System.in);
        System.out.println("Enter the study class year:");
        cyear = c.nextInt();
        Scanner sca = new Scanner(System.in);
        System.out.println("Enter the subject major of the student");
        major = sca.next();
    }
    void print(){
        System.out.println("First name is:" +fname);
        System.out.println("Last name is:" +lname);
        System.out.println("Class year is:" +cyear);
        System.out.println("Subject major is:" +major);
}
public class Students {
    public static void main(String[] args) {
        Information ob=new Information();
        ob.personal();
        ob.print();

        }
    }
}
